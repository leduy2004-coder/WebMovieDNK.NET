                            <p class="card-body movie-start">Khởi chiếu: @phim.NgayKhoiChieu.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                }

            </div>

            <div class="movie-list row coming">

                @foreach (var phim in Model.PhimSapChieu)
