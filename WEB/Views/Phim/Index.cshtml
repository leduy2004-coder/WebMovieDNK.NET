@model WEB.Models.MovieModel

@{
    ViewData["Title"] = "Thông tin phim";
}

<link href="~/css/film.css" rel="stylesheet" />

<section class="film-section">
    <div class="container">
        <div class="row film">
            <div class="img-column col-lg-4 col-md-4 col-sm-12">
                <div class="inner-column">
                    <div class="img">
                        <!-- Sử dụng hình ảnh từ đối tượng phim -->
                        <img src="@Model.HinhDaiDien" alt="Hình ảnh phim" class="img">
                    </div>
                </div>
            </div>
            <div class="content-column col-lg-4 col-md-4 col-sm-12">
                <div class="inner-column">
                    <h3>@Model.TenPhim</h3>
                    @* <p class="type-film">@Model.TheLoai</p> *@
                    <ul class="inf-film">
                        <li>Đạo diễn: <a>@Model.DaoDien</a></li>
                        <li>Ngày chiếu: <a>@Model.NgayKhoiChieu.ToString("dd/MM/yyyy")</a></li>
                        <li>Thời lượng: <a>@Model.ThoiLuong</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="film-product-tab"> 
             <h3>Mô tả</h3> 
            <div class="tabs-content"> 
                <div class="content"> 
                     <p>@Model.MoTa</p> 
                 </div> 
             </div> 
            
         </div>
    </div>
</section>
