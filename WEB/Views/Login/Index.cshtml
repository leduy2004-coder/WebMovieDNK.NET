@{
    ViewData["Title"] = "Đăng nhập";
}

<h2>Đăng nhập</h2>


<!-- Thông báo lỗi -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" action="@Url.Action("Login", "Login")">
    <div class="form-group">
        <label for="TenTK">Tên tài khoản:</label>
        <input type="text" id="TenTK" name="TenTK" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="MatKhau">Mật khẩu:</label>
        <input type="password" id="MatKhau" name="MatKhau" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Đăng nhập</button>
</form>

@model QuanLiSinhVien.Models.SinhVien
@{
    ViewBag.Title = "Đăng Nhập";
}

<link href="~/Content/css/login.css" rel="stylesheet" />
<style>
    .form-group {
        position: relative;
    }

    .form-control:focus + .float-label,
    .form-control:not(:placeholder-shown) + .float-label {
        top: -20px;
        font-size: 12px;
        color: #C7C7C7;
    }

    .float-label {
        position: absolute;
        top: 10px;
        left: 10px;
        transition: all 0.2s;
    }
</style>

<div class="login">
    <i ripple>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path fill="#C7C7C7" d="m12,2c-5.52,0-10,4.48-10,10s4.48,10,10,10,10-4.48,10-10-4.48-10-10-10zm1,17h-2v-2h2zm2.07-7.75-0.9,0.92c-0.411277,0.329613-0.918558,0.542566-1.20218,1.03749-0.08045,0.14038-0.189078,0.293598-0.187645,0.470854,0.02236,2.76567,0.03004-0.166108,0.07573,1.85002l-1.80787,0.04803-0.04803-1.0764c-0.02822-0.632307-0.377947-1.42259,1.17-2.83l1.24-1.26c0.37-0.36,0.59-0.86,0.59-1.41,0-1.1-0.9-2-2-2s-2,0.9-2,2h-2c0-2.21,1.79-4,4-4s4,1.79,4,4c0,0.88-0.36,1.68-0.930005,2.25z" />
        </svg>
    </i>
    <div class="photo"></div>
    <span>Đăng nhập tài khoản</span>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
    @Html.AntiForgeryToken()
    <div id="u" class="form-group">
        @Html.TextBoxFor(m => m.masv, new { @class = "form-control", spellcheck = "false", required = "required" })
        <label for="username" class="float-label">Tài khoản</label>
    </div>
    <div id="p" class="form-group">
        @Html.PasswordFor(m => m.matkhau, new { @class = "form-control", spellcheck = "false", required = "required" })
        <label for="password" class="float-label">Mật khẩu</label>
    </div>
    <div class="form-group">
        <button id="submit" type="submit" ripple>Đăng nhập</button>
    </div>
    }
    <div class="error">@ViewBag.error</div>
    <footer><a href="#0">Tạo tài khoản</a></footer>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const inputs = document.querySelectorAll('.form-control');

        inputs.forEach(input => {
            if (input.value) {
                input.nextElementSibling.classList.add('active');
            }

            input.addEventListener('focus', () => {
                input.nextElementSibling.classList.add('active');
            });

            input.addEventListener('blur', () => {
                if (!input.value) {
                    input.nextElementSibling.classList.remove('active');
                }
            });
        });
    });
</script>

